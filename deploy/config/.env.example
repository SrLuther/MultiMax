################################################################################
# MultiMax Environment Configuration
#
# Copie este arquivo para .env e configure os valores para sua instalação
# NUNCA commite o arquivo .env original ao git (contém senhas!)
################################################################################

# ============================================================================
# FLASK & APLICAÇÃO
# ============================================================================

# Modo de execução
FLASK_ENV=production
FLASK_DEBUG=false

# Chave secreta (MUDE ISSO EM PRODUÇÃO!)
# Gere com: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=GENERATE_SECURE_KEY_HERE

# ============================================================================
# SERVIDOR
# ============================================================================

# Interface e porta
MULTIMAX_HOST=127.0.0.1
MULTIMAX_PORT=5000

# Use 0.0.0.0 se atrás de um reverse proxy (Nginx)
# MULTIMAX_HOST=0.0.0.0

# ============================================================================
# BANCO DE DADOS
# ============================================================================

# PostgreSQL (RECOMENDADO em produção)
DATABASE_URL=postgresql+psycopg://multimax:CHANGE_PASSWORD@localhost:5432/multimax_db

# Alternativa: SQLite (desenvolvimento/pequenos servidores)
# DATABASE_URL=sqlite:////var/lib/multimax/estoque.db

# Caminho do arquivo SQLite (se usar SQLite)
# DB_FILE_PATH=/var/lib/multimax/estoque.db

# ============================================================================
# ARMAZENAMENTO DE DADOS
# ============================================================================

# Diretório para dados da aplicação (backups, logs, etc)
MULTIMAX_DATA_DIR=/var/lib/multimax

# Diretório para logs
LOG_DIR=/var/lib/multimax/logs

# ============================================================================
# MODO DE MANUTENÇÃO
# ============================================================================

# Ativar modo de manutenção (bloqueia acesso, mostra página estática)
MAINTENANCE_MODE=false

# ============================================================================
# KEEP-ALIVE (para servidores serverless/Heroku)
# ============================================================================

# Habilitar keep-alive (ping periódico)
KEEPALIVE_ENABLED=false

# URL para fazer ping
KEEPALIVE_URL=https://seu-dominio.com/health

# Intervalo em segundos
KEEPALIVE_INTERVAL=300

# ============================================================================
# LOGGING
# ============================================================================

# Nível de log: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# SEGURANÇA
# ============================================================================

# CORS (Cross-Origin Resource Sharing)
# CORS_ORIGINS=https://seu-dominio.com

# Rate limiting
# RATELIMIT_ENABLED=true
# RATELIMIT_REQUESTS=100
# RATELIMIT_WINDOW=3600

# ============================================================================
# RECURSOS EXTERNOS (se aplicável)
# ============================================================================

# WhatsApp, APIs externas, etc
# WHATSAPP_TOKEN=seu_token
# EXTERNAL_API_KEY=sua_chave

# ============================================================================
# CONFIGURAÇÕES AVANÇADAS
# ============================================================================

# Modo de workers (para aplicações multi-processo)
# WORKERS=4

# Timeout de conexão
# SQLALCHEMY_ENGINE_OPTIONS={"pool_size": 10, "pool_recycle": 3600}

# Fuso horário
TIMEZONE=America/Sao_Paulo
