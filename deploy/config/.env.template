# MultiMax - Variáveis de Ambiente
# ====================================================
# Arquivo de configuração para a aplicação MultiMax
# Localização: /opt/multimax/.env
# ====================================================

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Flask Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

FLASK_ENV=production
DEBUG=false

# Chave secreta para criptografia de sessão
# Gere uma nova com: python3 -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=your-very-long-secret-key-change-this-in-production

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Database Configuration (PostgreSQL)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://multimax:multimax123@localhost:5432/multimax

# Connection pooling
DB_POOL_SIZE=10
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Application Server Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Binding address (use 127.0.0.1 com nginx como proxy reverso)
HOST=127.0.0.1
PORT=5000

# Número de workers (para produção, use: num_cores * 2 + 1)
WORKERS=4

# Request timeouts (em segundos)
REQUEST_TIMEOUT=60

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Security Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Maximum upload size (16MB)
MAX_CONTENT_LENGTH=16777216

# Session configuration
SESSION_TIMEOUT=3600
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# HTTPS/HSTS (Strict-Transport-Security)
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_HSTS_PRELOAD=true
SECURE_SSL_REDIRECT=true

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Logging Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

LOG_LEVEL=INFO

# Log file location
LOG_FILE=/var/log/multimax/app.log

# Tamanho máximo de arquivo log antes de rotacionar (10MB)
LOG_MAX_BYTES=10485760

# Número de backups de log a manter
LOG_BACKUP_COUNT=10

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Features Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Keep-Alive (previne timeout em plataformas com auto-sleep)
KEEPALIVE_ENABLED=false
KEEPALIVE_URL=
KEEPALIVE_INTERVAL=300

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Email Configuration (SMTP)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=noreply@multimax.com

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# WhatsApp Integration (opcional)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

WHATSAPP_ENABLED=false
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_KEY=your-api-key-here
WHATSAPP_ACCOUNT_ID=your-account-id

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Monitoring & Analytics (opcional)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Sentry (error tracking)
SENTRY_DSN=

# New Relic (APM)
NEW_RELIC_CONFIG_FILE=

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Cache Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Redis (opcional, se implementado)
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=SimpleCache

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Timezone & Localization
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

TZ=America/Sao_Paulo
LANGUAGE=pt_BR
